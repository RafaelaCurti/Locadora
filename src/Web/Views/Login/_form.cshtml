@inherits ModelWebViewPage<TLogin>
<div class="row">
    @using (Html.BeginForm())
    {
        <div class="col-lg-12">
            @this.Label(x => x.Login).Class("control-label").Value("Nome:")
            @this.TextBox(x => x.Login).Class("required form-control").Autofocus(true)
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="col-lg-12">
            @this.Label(x => x.Password).Class("control-label").Value("Senha:")
            @this.Password(x => x.Password).Class("required form-control")
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div class="col-md-12 text-center" style="margin-top: 15px;">
            <button type="button" class="btn btn-info btn-lg" onclick="location.href='@Url.Action(MVC.Login.Index())'">
                <i class="fas fa-times"></i> Voltar
            </button>
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-check"></i> Salvar
            </button>
        </div>
    }

</div>
